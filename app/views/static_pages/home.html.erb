<div class="center jumbotron">
  <h1><%= t "view.static_pages.hello" %></h1>
  <%= link_to t("static_pages.signup"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<%= link_to image_tag("framgialogo.png", alt: t("view.static_pages.image_alt")),
  "http://recruit.framgia.vn" %>

<% if logged_in? %>
  <div class="panel panel-heading">
    <center>
      <h1><%= t "views.static_pages.home1" %></h1>
    </center>
  </div>
  <div class="col-md-12">
    <center>
      <%= link_to t("views.static_pages.word_list"), words_path,
        class: "btn btn-lg btn-primary" %>
      <%= link_to t("views.static_pages.start_lesson"), categories_path,
        class: "btn btn-lg btn-success" %>
    </center>
  </div>
  <div class="clearfix"></div>
  <br/>
  <div>
    <%= render "users/activities" %>
  </div>
<% else %>
  <div class="panel panel-heading">
    <center>
      <h1><%= t "views.static_pages.home1" %></h1>
    </center>
  </div>
  <div class="panel-body">
    <center>
      <h3><%= t "views.static_pages.home.team" %></h3>
      <p><%= t "views.static_pages.home.ten1" %></p>
      <p><%= t "views.static_pages.home.ten2" %></p>
      <br/>
      <br/>
      <%= link_to t("views.static_pages.signup"), signup_path,
        class: "btn btn-lg btn-primary" %>
    </center>
  </div>
<% end %>
