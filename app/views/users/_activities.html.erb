<div class="alert alert-dismissable">
  <% @activities.each do |activity| %>
    <li class="notify-item seen">
    <% if activity.followed? %>
      <%= link_to activity.show, user_path(activity.target_id) %>
    <% end %>
    <% if activity.unfollowed? %>
      <%= link_to activity.show, user_path(activity.target_id) %>
    <% end %>
    <% if activity.start_lesson? %>
      <%= link_to activity.show, lesson_path(activity.target_id) %>
    <% end %>
    </li>
  <% end %>
  <%= will_paginate @activities %>
</div>

