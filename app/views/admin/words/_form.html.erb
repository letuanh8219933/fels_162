<%= form_for [:admin,@category, @word] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.label :content %>
  </br>
  <%= f.text_field :content %>
  </br>
  <%= f.label :word_answers, t("admin.word_answer") %>
  <%= f.fields_for :word_answers do |builder| %>
    <%= render "word_answer_fields", f: builder %>
  <% end %>
  <%= link_to_add_fields t("admin.add_answers"), f, :word_answers %>
  </br>
  <%= f.submit t("admin.add_word"), class: "btn btn-primary" %>
<% end %>
