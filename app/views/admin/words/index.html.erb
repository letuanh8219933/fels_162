<div>
  <h1> <% t "admin.words_list" %> </h1>
</div>
<div class="panel">
  <div class="form-inline center">
    <%= form_tag "", method: :get do %>
      <%= select_tag :category_id,
        options_from_collection_for_select(@categories, :id, :name, params[:category_id]),
          include_blank: t(".all"), class: "form-control" %>
      <div>
        <% @words.each do |word| %>
          <li><%= word.content %></li>
        <% end %>
        <%= will_paginate %>
      </div>
      <%= submit_tag t("admin.search_word"), class: "btn btn-success" %>
    <% end %>
</div>
